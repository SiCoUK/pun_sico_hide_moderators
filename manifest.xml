	<author>Simon Corless</author>
	<minversion>1.3</minversion>
	<maxtestedon>1.3.2</maxtestedon>

	<hooks>

		<hook id="in_normal_row_pre_item_title_merge"><![CDATA[

			$cur_forum['moderators'] = '';
		
		]]></hook>

	</hooks>

</extension>